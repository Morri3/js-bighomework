page{
  background-image: url(https://pic3.zhimg.com/80/v2-179e32948f747c96885d424fc376d72a_720w.jpg);
}
.user_info_wrap{
  height: 45vh;
  background-color: var(--themecolor);
  overflow: hidden;
}
.login_btn{
  margin-top: 150rpx;
}
.user{
  position: relative;
}
.user_img{
  width: 100%;
  height: 50vh;
  filter: blur(10rpx);
}
 .user_info{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.user_info_icon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_name{
  margin-top: 40rpx;
  color: rgba(76, 187, 218, 0.13);
}

.user_item{
  margin-top: 100rpx;
  position: relative;
}
.app_info_wrap{
  padding-bottom: 100rpx;
  color: #666;
  position: absolute;
  width: 100%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}
 .app_info_wrap {
  background-color: rgba(128, 135, 240, 0.014);
  margin-top: 30rpx;
}
.info_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  display:flex;
  justify-content:space-between;
}
.info_contact {
  display: flex;
  justify-content: space-between;
}

.right{
  display:flex;
  justify-content:space-between;
}