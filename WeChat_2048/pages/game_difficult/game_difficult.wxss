.game-container {
  background: #faf8ef;
  color: #776e65;
  font-family: "Helvetica Neue", Arial, sans-serif;/*字体*/
  font-size: 18px;

  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: space-between; */
  box-sizing: border-box;
}
/*顶部*/
.top {
  text-align: center;/*文字居中*/
  top: 6vh;
  margin-top: 70px;
}
/*顶部左侧*/
.topLeft {
  width: 120px;
  height: 100px;
  box-sizing: border-box;/*padding和border的值不影响元素的宽高*/
  float: left; /*左浮动*/
  position: relative;/*相对定位*/
  margin-right: 20px;
  display: flex;
  flex-direction: column;
}
.title {
  font-size: 38px;
  font-weight: 900;
  position: relative;/*相对定位*/
}
.restartGane{
  background-color: #a2cff3;
  padding: 5px;
  border-radius: 10px;
  font-size: 20px;
  font-weight: 600;
  color: #fff;
}

/*顶部右侧*/
.topRight {
  display:flex;
  flex-direction: row;/*横向分布*/
  justify-content: space-between; /*两边平均分布*/
  align-items: center; /*侧轴居中*/
  float: right;
}
.curScore{
  margin-right: 10px;
}
.curScoreText{
  color: #fff;
}
.bestScoreText{
  color: #eca84f;
}
.curScore,.bestScore {
  width: 90px;
  height: 90px;
  background-color: #c9c0b7;
  align-items: center;/*侧轴居中*/
  justify-content: center;
  border-radius: 10px;
  opacity: 0.7;/*透明度*/
  display: flex;
  flex-direction: column;
  text-align: center;
}
.curScoreTitle,.bestScoreTitle{
  font-size: 20px;
  font-weight: 800;
}
.curScoreText,.bestScoreText {
  font-size: 26px;
  font-weight: 800;
}

/*棋盘部分*/
.middle {
  width: 93vw;/*vw是视窗宽度的百分比*/
  height: 93vw;
  display: flex;
  position: relative;
  padding-top: 4vw;
  padding-left: 1vw;
  background: #bbada0;
  border-radius: 10px;
  margin-top: 30px;
  
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-touch-callout: none;/*禁用系统默认菜单*/
  -ms-touch-callout: none;
  -webkit-user-select: none;/*css控制文字不能被选中*/
  -moz-user-select: none;
  -ms-user-select: none;/*当触控事件发生在元素上时，不进行任何操作*/
  -ms-touch-action: none;
  touch-action: none;
}
.gridCell {
  width: 15vw;
  height: 15vw; 
  margin-left: 2.5vw;
  margin-bottom: 2.5vw;
  float: left;
  border-radius: 10px;
  box-sizing: border-box;
  background: rgba(238, 228, 218, 0.4);
  overflow: hidden;/*溢出隐藏*/
}
/*格子*/
.cell {
  width: 15vw;
  height: 15vw; 
  line-height: 15vw;/*行高*/
  position: relative;
  font-size: 35px;
  font-weight: 600;
  text-align: center;
  border-radius: 10px;
}
/*各种数字时的格子样式*/
.cell-2 { 
  background: #eee4da; 
}
.cell-4 { 
  background: #ede0c8; 
}
.cell-8 {
  color: #f9f6f2;
  background: #f2b179;
}
.cell-16 {
  color: #f9f6f2;
  background: #f59563;
}
.cell-32 {
  color: #f9f6f2;
  background: #f67c5f;
}
.cell-64 {
  color: #f9f6f2;
  background: #f65e3b;
}
.cell-128 {
  color: #f9f6f2;
  background: #edcf72;
  font-size: 30px;
}
.cell-256 {
  color: #f9f6f2;
  font-size: 30px;
  background: #edcc61;
}
.cell-512 {
  color: #f9f6f2;
  font-size: 30px;
  background: #edc850;
