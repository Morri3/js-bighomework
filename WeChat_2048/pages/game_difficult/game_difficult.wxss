}
.cell-2048 {
  color: #f9f6f2;
  font-size: 25px;
  background: #edc22e;
}

/*蒙版*/
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(206, 201, 201, 0.5);
  z-index: 9000;
}
/*弹窗*/
.modalDlg{
  position: fixed;
  /* left: 120rpx;
  right: 120rpx;
  top: 250rpx;
  bottom: 250rpx; */
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: 270rpx 100rpx;

  z-index: 9999;
  background-color: #ccfbff;
  border-radius: 36rpx;
  display: flex;/*弹性布局*/
  flex-direction: column;/*纵向排列*/
  align-items: center;/*元素居中*/
  justify-content: center;
}
/*弹窗标题*/
.modaltitle{
  font-size: 70rpx;
  margin-top: 10rpx;
  font-weight: 900; /*本质是字体加粗*/
}
/*弹窗中的文字*/
.msgout{
  font-size:40rpx;
  font-weight: 400;
  margin-top: 30rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
/*一行多种颜色的字*/
.twomsg{
  display: flex;
  flex-direction: row;
  color: rgb(165, 38, 224);
  font-weight: 600;
}
/*弹窗两个按钮外面的box*/
.twobtn{
  display: flex;
  flex-direction: row;
  justify-content: space-between;/*平均分布*/

  margin-top: 60rpx;
}
/*重新开始按钮box*/
.btnrestart{
  width: 130rpx;
  height: 80rpx;
  background: linear-gradient(#a2cff3, #f0dee7);
  border-radius: 20rpx;
}
/*关闭按钮box*/
.btnclose{
  width: 210rpx;
  height: 80rpx;
  background: linear-gradient(#a2cff3, #f0dee7);
  border-radius: 20rpx;
}